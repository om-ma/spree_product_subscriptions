<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_subscription_frequencies_list), spree.admin_subscription_frequencies_path, class: 'btn-success', icon: 'chevron-left' %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @subscription_frequency } %>

<%= f.field_container :title, class: ['form-group'] do %>
  <%= f.label :title %>
  <%= f.select :title, options_for_select(["month"], @subscription_frequency.title), {}, class: 'form-control', id: 'subscription_frequency_title' %>
  <%= f.error_message_on :title %>
<% end %>

<%= f.field_container :months_count, class: ['form-group'] do %>
  <%= f.label :months_count %>
  <%= number_field :subscription_frequency, :months_count, min: 1, value: @subscription_frequency.months_count || 1, class: 'form-control', id: 'subscription_frequency_months_count' %>
  <%= f.error_message_on :months_count %>
<% end %>
