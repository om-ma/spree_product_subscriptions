<% if @subscription.paused? %>
  <%= link_to Spree.t(:activate), unpause_subscription_path(@subscription), class: "btn ajax_handler #{ btn_class } btn-success", data: { method: "PATCH", confirmation: Spree.t("subscriptions.confirm.activate") } %>
<% else %>
  <%= link_to Spree.t(:pause), pause_subscription_path(@subscription), class: "btn #{ btn_class } ajax_handler btn-warning", data: { method: "PATCH", confirmation: Spree.t("subscriptions.confirm.pause") } %>
<% end %>
